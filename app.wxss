/**app.wxss**/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}


/* 客服 */

.kefu {
    position: fixed;
    right: 30rpx;
    bottom: 20rpx;
    width: 50rpx;
    height: 50rpx;
    background-image: url('https://h5.beerqi.com/imgs/csr.png');
    background-repeat: no-repeat;
    background-size: contain;
    border: none;
    background-color: transparent;
    opacity: .8;
}

.kefu::after {
    border: none;
}

.kefu.button-hover {
    background-color: transparent;
}


/* 加载loading */

.myloading {
    width: 725rpx;
    height: 150rpx;
    text-align: center;
}

.myloading image {
    width: 120rpx;
    height: 80rpx;
    margin-top: 25rpx;
}


/* 全屏loading */

.fullloading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, .5);
    text-align: center;
    z-index: 10000;
}

.fullloading image {
    width: 180rpx;
    height: 120rpx;
    margin-top: 350rpx;
}


/* 提示弹框 */

.popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, .5);
    text-align: center;
    z-index: 10000;
}

.popup image {
    margin-top: 400rpx;
    width: 450rpx;
}


