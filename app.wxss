/* 会员 */

.masterBox {
    width: 750rpx;
    position: relative;
}

.masterBox image {
    width: 750rpx;
}

.masterBox view.first {
    position: absolute;
    top: 0.5vw;
    left: 14vw;
}

.masterBox view.second {
    position: absolute;
    bottom: 3vw;
    left: 14vw;
}

.masterBox view text {
    /* font-weight: 700; */
    font-size: 23rpx;
    font-family: PingFangSC-Regular;
}

.masterBox view text.tz {
    font-size: 25rpx;
    color: #ffd31f;
}


/* 手机formId */

.detailFooter .right button {
    width: 100%;
    height: 100%;
    display: block;
    opacity: 0;
    border-radius: 0;
}

.recommend-view {
    position: relative;
}

.recommend-view form {
    width: 100vw;
    height: 64.84vw;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
}

.recommend-view button {
    width: 100%;
    height: 100%;
    display: block;
    border-radius: 0;
    padding: 0;
    opacity: 0;
}