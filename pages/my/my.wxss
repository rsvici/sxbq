/* pages/mine/mine.wxss */

page {
    background-color: #f5f5f5;
}

.myWeb {
    width: 750rpx;
    height: 300rpx;
    background-color: #000;
    padding: 0;
    overflow: hidden;
    position: relative;
}

.myWeb .masterMy {
    position: absolute;
    top: 0;
    left: 0;
}

.myWeb .masterMy image {
    width: 300rpx;
    height: 150rpx;
}

.myWeb .masterMy view {
    position: absolute;
    top: 26rpx;
    left: 153rpx;
    font-size: 16rpx;
    color: #000;
    font-weight: 700;
}

.myWeb text {
    font-family: PingFangSC-Regular;
}

.myWeb .first {
    margin-top: 30rpx;
    height: 100rpx;
    width: 750rpx;
    text-align: center;
}

.myWeb .first image {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50rpx;
    position: relative;
}

.myWeb .first .pic {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50rpx;
    margin: 0 auto;
    overflow: hidden;
}

.myWeb .first image {
    position: absolute;
    top: 10rpx;
    right: 310rpx;
    height: 50rpx;
    width: 50rpx;
}

.myWeb .second {
    height: 70rpx;
    font-size: 25rpx;
    color: #fff;
    line-height: 90rpx;
    text-align: center;
}

.myWeb .third {
    height: 30rpx;
    color: #fff;
    line-height: 30rpx;
    text-align: center;
    opacity: 0.7;
    font-size: 22rpx;
}

.myWeb .fouth {
    height: 60rpx;
    text-align: center;
}

.myWeb .fouth text {
    line-height: 60rpx;
    padding: 7rpx 20rpx;
    background-color: rgba(255, 255, 255, .3);
    color: #fff;
    border-radius: 20rpx;
    font-size: 20rpx;
    opacity: .8;
}

.myWeb .fixleft {
    position: absolute;
    right: 0;
    top: 150rpx;
    width: 160rpx;
    height: 44rpx;
    background-image: url('https://h5.beerqi.com/imgs/my/fix.png');
    z-index: 10;
    background-size: contain;
    background-repeat: no-repeat;
    font-size: 20rpx;
    line-height: 44rpx;
    text-align: center;
}

.tel {
    width: 100%;
    height: 84rpx;
}

.tel image {
    width: 100%;
    height: 84rpx;
}

.mybox .first {
    width: 750rpx;
    height: 84rpx;
}

.mybox .first image {
    width: 750rpx;
    height: 84rpx;
}

.mybox .second {
    width: 750rpx;
    box-sizing: border-box;
    padding: 40rpx;
    overflow: hidden;
}

.mybox .second .order {
    width: 315rpx;
    height: 280rpx;
    float: left;
}

.mybox .second .order.t1 {
    margin-right: 40rpx;
    margin-bottom: 40rpx;
}

.mybox .second .order.t2 {
    margin-bottom: 40rpx;
}

.mybox .second .order.t3 {
    margin-right: 40rpx;
}

.mybox .second .order image {
    width: 315rpx;
    height: 280rpx;
}


/* 客服 */

.buhui {
    position: fixed;
    right: 30rpx;
    bottom: 50rpx;
    width: 60rpx;
    height: 60rpx;
    background-image: url('https://h5.beerqi.com/imgs/csr.png');
    background-repeat: no-repeat;
    background-size: contain;
    border: none;
}

.buhui::after {
    border: none;
}

.buhui.button-hover {
    background-color: transparent;
}