/* pages/shopcart/shopcart.wxss */

page {
    background: #fff;
    font-family: PingFangSC-Regular, "微软雅黑";
}

.shopcar {
    padding-bottom: 50px;
    background-color: #f5f5f5;
    margin: 0;
    overflow: hidden;
    min-height: 90vh;
}

.list {
    display: flex;
    background: #fff;
    border-bottom: 1px solid #eee;
    /*padding: 10px 10px 5px 0;*/
    margin-top: 20rpx;
}

.list .choose {
    /*background: pink;*/
    height: 100px;
    padding: 0 7px;
    vertical-align: bottom;
    display: flex;
    justify-content: center;
    align-items: center;
}

.list .choose .option {
    height: 30rpx;
    width: 30rpx;
}

.list .choose .option image {
    height: 30rpx;
    width: 30rpx;
}

.list .imgages {
    /*width: 80px;
    height: 80px;*/
    margin: 0 10px 0 0;
}

.list .imgages .navimg {
    width: 80px;
    height: 80px;
    margin: 10px 0;
    vertical-align: top;
}

.list .info {
    position: relative;
    width: 65%;
}

.list .info>view {
    display: block;
    font-size: 12px;
}

.list .info .title {
    width: 100%;
    font-size: 30rpx;
    color: #454545;
    overflow: hidden;
    text-overflow: ellipsis;
    display: box;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-top: 10px;
}

.list .info .specify {
    color: #999;
    margin-top: 10px;
    font-size: 25rpx;
}

.list .info .charge {
    color: #aa821e;
    font-size: 28rpx;
    padding: 5px 0 0 0;
}

.list .info .charge>text {
    display: inline;
}

.list .info .buy-num {
    position: absolute;
    bottom: 4px;
    right: 0;
    background: #fff;
    border: 1px solid #eee;
    border-radius: 5px;
    color: #4c4c4c;
}

.list .info .buy-num .add,
.list .info .buy-num .sub {
    display: inline-block;
    width: 30px;
    line-height: 30px;
    height: 30px;
    text-align: center;
}

.list .info .buy-num .goodsNum {
    display: inline-block;
    width: 40px;
    height: 30px;
    text-align: center;
    line-height: 30px;
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    font-size: 16px;
}

.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 40px;
    background: #fff;
    border-top: 1px solid #eee;
}

.footer .allchoice {
    float: left;
    font-size: 10px;
    padding: 7px 16.5px;
    width: 100rpx;
}

.footer .allchoice .option {
    height: 30rpx;
    width: 30rpx;
}

.footer .allchoice .option image {
    height: 30rpx;
    width: 30rpx;
}

.footer .total {
    float: right;
    color: #2c2c2c;
    padding: 0 10px 0 0;
    font-size: 25rpx;
    width: 50%;
}

.footer .total .money {
    text-align: right;
    color: #aa821e;
    font-size: 30rpx;
}

.footer .total .other {
    display: block;
    text-align: left;
    font-size: 20rpx;
    color: #000;
}

.footer .gotonext {
    float: right;
    height: 40px;
    line-height: 40px;
    padding: 0 50rpx;
    background: #ffe900;
    font-size: 16px;
    color: #000;
}

.touch-item {
    font-size: 14px;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #ccc;
    width: 100%;
    overflow: hidden
}

.content {
    display: flex;
    width: 100%;
    padding: 10px;
    line-height: 22px;
    margin-right: 0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(50px);
    transform: translateX(50px);
    margin-left: -50px
}

.del {
    background-color: #a0a0a0;
    width: 50px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    -webkit-transform: translateX(50px);
    transform: translateX(50px);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}

.del image {
    width: 20px;
    height: 20px;
}

.touch-move-active .content,
.touch-move-active .del {
    -webkit-transform: translateX(0);
    transform: translateX(0);
}

#masterBoxShopcar {
    position: fixed;
    bottom: 40px;
    background: #fff;
}