/*红包页面*/

.redhot {
    width: 700rpx;
    margin: 25rpx auto;
    height: 200rpx;
}

.redhot .redhotlist .li {
    width: 700rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
    position: relative;
}

.redhot .redhotlist .li image {
    width: 700rpx;
    height: 200rpx;
}

.redhot .redhotlist .li .redhotlist_left {
    position: absolute;
    top: 0;
    right: 0;
    height: 200rpx;
    width: 260rpx;
    text-align: center;
}

.redhot .redhotlist .li .redhotlist_left view {
    line-height: 200rpx;
    font-size: 70rpx;
    font-weight: 700;
    color: #AA821E;
    font-family: Aril;
}

.redhot .redhotlist .li .redhotlist_left view .sign {
    font-weight: normal;
    letter-spacing: -4rpx;
    font-size: 40rpx;
}

.redhot .redhotlist .li .redhotlist_bottom {
    left: 170rpx;
    bottom: 6vw;
    position: absolute;
}

.redhot .redhotlist .li .redhotlist_bottom text {
    font-family: 'PingFangSC-Regular';
    display: block;
    text-align: center;
    font-size: 20rpx;
    line-height: 30rpx;
    color: #020204;
}

.redhot .redhotlist .li .redhotlist_bottom .name {
    font-size: 25rpx;
    color: #333;
    font-weight: 700;
}

.redhotNull {
    position: absolute;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
}

.redhotNull image {
    width: 750rpx;
    height: 750rpx;
}