/* 搜索筛选 */

.choice {
    /* margin-top: 80rpx; */
    background-color: #f5f5f5;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    width: 100%;
    overflow: hidden;
    z-index: 10;
    box-sizing: border-box;
    height: 138rpx;
}

.choice .choiceTop {
    height: 50rpx;
    /*overflow: hidden;*/
    width: 710rpx;
    padding: 20rpx;
    background-color: #ebebeb;
}

.choice .choiceTop form {
    width: 80%;
    background-color: #fff;
    border-radius: 5px;
    height: 50rpx;
    float: left;
    text-align: center;
    padding-left: 5vw;
    margin-left: 2%;
    position: relative;
}

.choice .choiceTop form image {
    display: block;
    height: 32rpx;
    width: 32rpx;
    position: absolute;
    top: 10rpx;
    left: 150rpx;
}

.choice .choiceTop form input {
    display: block;
    margin-left: 180rpx;
    height: 50rpx;
    padding: 0;
    line-height: 50rpx;
    caret-color: rgb(170, 20, 20);
    font-size: 22rpx;
    font-family: PingFangSC-Regular;
    color: #666;
    text-align: left;
}

.choice .choiceTop form input::-webkit-input-placeholder {
    font-size: 22rpx;
    font-family: PingFangSC-Regular;
    line-height: 50rpx;
}

.choice .choiceTop .choiceKf button {
    display: block;
    float: right;
    height: 45rpx;
    width: 45rpx;
    margin-top: 5rpx;
    margin-right: 10rpx;
    background-image: url('https://h5.beerqi.com/imgs/csr.png');
    background-repeat: no-repeat;
    background-size: contain;
    border: none;
    background-color: transparent;
}

.choice .choiceTop .choiceKf button::after {
    border: none;
}

.choice .choiceTop .choiceKf button.button-hover {
    background-color: transparent;
}

.choice .choicefotter {
    width: 94%;
    height: 50rpx;
}

.choice .choicefotter view {
    height: 50rpx;
    width: 25%;
    float: left;
    text-align: center;
    background-color: #f5f5f5;
}

.choice .choicefotter view text {
    display: inline-block;
    text-decoration: none;
    font-size: 22rpx;
    color: #000;
    letter-spacing: 2rpx;
    height: 50rpx;
    line-height: 50rpx;
    overflow: hidden;
    font-family: PingFangSC-Regular;
}

.choice .choicefotter view text.active {
    color: #967800;
}

