/* 标题 */

.shouye {
    background-color: #f5f5f5;
}

.tab-h {
    height: 6.5vh;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 6.5vh;
    background: #000;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}

.tab-item {
    /* margin: 0 36rpx; */
    font-size: 25rpx;
    display: inline-block;
    width: 150rpx;
    text-align: center;
    color: #eee;
    position: relative;
}

.tab-item form {
    top: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 100%;
}

.tab-item button {
    width: 100%;
    height: 100%;
    display: inline-block;
    opacity: 0;
    border-radius: 0;
}

.tab-item.active {
    color: #eee;
    position: relative;
}

.tab-item.active1 {
    color: #886D4C;
    position: relative;
}

.tab-item.active:after {
    content: "";
    display: block;
    height: 2rpx;
    width: 60rpx;
    margin-left: 39rpx;
    background: #eee;
    position: absolute;
    bottom: 10rpx;
    left: 7rpx;
    border-radius: 16rpx;
}

.tab-item.active1:after {
    content: "";
    display: block;
    height: 4rpx;
    width: 100rpx;
    margin-left: 20rpx;
    background: #886D4C;
    position: absolute;
    bottom: 10rpx;
    left: 5rpx;
    border-radius: 16rpx;
}

.shouye .tab-item image {
    width: 102rpx;
    height: 30rpx;
}


/* 商品内容  */

.tab-content {
    height: 100%;
}

.goodsList {
    height: 100%;
