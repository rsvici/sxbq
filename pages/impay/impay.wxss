.gopayContent {
    background-color: #f5f5f5;
    min-height: 100vh;
}

.gopayContent .list {
    margin-bottom: 2vw;
}


/* 商品列表 */

.gopayContent .second {
    height: 420rpx;
    margin-bottom: 0vw;
}

.gopayContent .second .imgages {
    width: 750rpx;
    height: 420rpx;
}

.gopayContent .second .imgages .navimg {
    width: 720rpx;
    height: 400rpx;
    margin: 15rpx 10rpx 0px;
}


/* 会员权益 */

.gopayContent .hyqy .imgages {
    width: 750rpx;
}

.gopayContent .hyqy .imgages .navimg {
    width: 750rpx;
    height: 480rpx;
    margin: 0;
}


/* 第三层价格 */

.gopayContent .third {
    background-color: #fff;
    height: 15vh;
}

.gopayContent .third .ul .li {
    height: 5vh;
    padding: 0 7vw;
}

.gopayContent .third .ul .li view {
    width: 40%;
    line-height: 5vh;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
}

.gopayContent .third .ul .li .left {
    float: left;
    text-align: left;
}

.gopayContent .third .ul .li2 .left text {
    height: 28rpx;
    box-sizing: border-box;
    border: 1px solid #967800;
    color: #967800;
    font-size: 25rpx;
    line-height: 28rpx;
    padding: 0 15rpx;
    margin-left: 10rpx;
}

.gopayContent .third .ul .li .right {
    float: right;
    text-align: right;
    font-size: 32rpx;
    font-family: Arial;
    font-weight: 700;
}

.gopayContent .third .ul .li .right text {
    font-size: 28rpx;
}

.gopayContent .third .ul .li .right text.span1 {
    font-family: PingFangSC-Regular
}

.gopayContent .third .ul .li3 .right {
    color: #967800;
}


/* 底部结算 */

.shopcarFooter {
    position: fixed;
    bottom: 0px;
    width: 100%;
    border-top: 1px solid #c8c8c8;
    overflow: hidden;
    background-color: #fff;
    text-align: center;
    z-index: 10;
}

.shopcarFooter .right {
    width: 25%;
    float: right;
    text-align: center;
    background-color: #ffe900;
    line-height: 80rpx;
}

.shopcarFooter .right text {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
}

.shopcarFooter .center {
    display: inline-block;
    width: 74%;
    text-align: left;
}

.shopcarFooter .center .first {
    overflow: hidden;
    padding-left: 40rpx;
}

.shopcarFooter .center .first view {
    float: left;
}

.shopcarFooter .center .first .left1 {
    float: left;
}

.shopcarFooter .center .first .left2 {
    float: right;
    text-align: right;
    padding-right: 3%;
}

.shopcarFooter .center .first text {
    font-family: Arial;
    font-size: 38rpx;
    color: #aa821e;
    font-weight: 700;
    display: inline-block;
}

.shopcarFooter .center .first .span1 {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #000;
    font-weight: 100;
}

.shopcarFooter .center .first .span2 {
    font-family: PingFangSC-Regular;
    font-size: 25rpx;
    color: #aa821e;
    font-weight: 100;
}